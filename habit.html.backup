        });
        
        document.querySelectorAll('.focus-decrease').forEach(btn => {
            btn.addEventListener('click', () => {
                const habitId = parseInt(btn.dataset.id);
                updateHabitProgress(habitId, -1);
                updateFocusStats();
                renderFocusHabits();
